#!/usr/bin/bash

usage () {
cat << H
Usage: 
	$(basename "$0") TARGET DIRECTORY
Note: 
	TARGET is a path from \$DOTFILE
H
}

if [ "$DOTFILE" = "" ]; then
	echo "\$DOTFILE is not defined"
	exit 1
fi

TARGET=$DOTFILE/$1
DIRECTORY=$2

if [ ! -f $TARGET ]; then
	usage
	echo "file ($TARGET) does not exists"
	exit 1
fi

if [ ! -d $DIRECTORY ]; then
	mkdir -pvvv $DIRECTORY
fi

ln -fsvvv $TARGET $DIRECTORY
